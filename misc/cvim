" vim: set ft=text syntax=vim ts=2 sw=2:

" This file is used for the Chromium Vim Google Chrome extension

let blacklists = ['https://www.youtube.com/*', 'https://monkeytype.com/*', 'https://mail.google.com/*']

unmap ?

toTwoPath -> {{
  const newPath = window.location.pathname.split('/').slice(1, 3)
    if (newPath.length !== 2) {
      return
    }
  const fullUrl = 'https://github.com/' + newPath.join('/')
  window.location.replace(fullUrl)
}}

site 'https://github.com/*' {
  unmap /
  map gd :open https://github.com<CR>
  map gp :open https://github.com/pulls<CR>
  map gi :open https://github.com/issues<CR>
  map gc :call toTwoPath<CR>
}

site 'https://pkg.go.dev/*' {
  map gf createHint
  unmap /
  unmap f
}
