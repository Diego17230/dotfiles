# -General Config-
data.location=$HOME/.task
news.version=2.6.0
# No nags about more urgent tasks
nag=
# No dates for annotations, just a dash
# Zero width unicode character so nothing shows up for annotations
dateformat.annotation=â€‹


# -Aliases-
alias.homework=add project:School +homework
alias.work=next +homework
alias.tod=when.is:today
alias.tom=when.is:tomorrow
alias.cal=calendar
alias.cancel=done +cancelled


# -General Urgency Modifiers-
# Age doesn't contribute to urgency
urgency.age.coefficient=0
# Tags don't affect urgency
urgency.tags.coefficient=0
# Coding projects don't have any urgency
urgency.user.project.Coding.coefficient=-1
# Easy work is less urgent
urgency.user.tag.easy.coefficient=-3.5
# Annotations doesn't affect urgency
urgency.annotations.coefficient=0
urgency.user.project..coefficient=0.5


# -Colors-
include dark-violets-256.theme
# Sky blue
color.due.today=rgb045
# Light blue
color.due=rgb135
# Green
color.completed=rgb032
# Red
color.overdue=rgb501
color.header=yellow
color.footnote=yellow
# Sky blue on dark blue
color.active=rgb045 on rgb002
# Deep red
color.tag.cancelled=rgb400

# Order of what colors are shown when multiple are applicable
rule.precedence.color=deleted,tag.cancelled,completed,active,keyword.,tag.,project.,overdue,scheduled,due.today,due,blocked,blocking,recurring,tagged,uda.


# -Reports-
# Next
report.next.labels=ID,Active,Deps,P,Project,Tag,Recur,S,When,Due,Until,Description,Urg
report.next.columns=id,start.age,depends,priority,project,tags,recur,scheduled.countdown,when,due.relative,until.remaining,description,urgency
# Only shows with urgency over 0
report.next.filter=status:pending -WAITING limit:page urgency.over:0
# Sorts by urgency, then closest when date, then closest due date
report.next.sort=urgency-,when+,due+
# Code
report.code.description=View coding tasks sorted by project
report.code.columns=id,start.age,depends,priority,project,tags,recur,scheduled.countdown,when,due.relative,until.remaining,description,urgency
report.code.labels=ID,Active,Deps,P,Project,Tag,Recur,S,When,Due,Until,Description,Urg
report.code.sort=project+/,urgency-
report.code.filter=status:pending -WAITING limit:page project:Coding

# <Abbrev of month> <unpadded day>
dateformat.report=b d


# -UDAs-
uda.when.type=date
uda.when.label=When
urgency.uda.when.coefficient=4
uda.todo.type=string
uda.todo.label=Todo
