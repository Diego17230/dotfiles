#!/bin/zsh

# Generates a file or directory (if the -d option is specified) into the
# ~/.temporary directory. Optional first argument as the file extension of the
# generated file. The contents of ~/.temporary are cleared daily


# Checks if there is more than one argument
if [[ $# > 1 ]]; then
  echo 'Needs one or zero arguments'
  return 1
fi

# Generates random number
random=$(shuf -i 1-1000 -n 1)
temp_path="$HOME/.temporary"
if [[ $1 == '-d' ]]; then
  mkdir "$temp_path/$random"
  cd "$temp_path/$random"
else
  # Defaults to the txt file extension if no arguments are present
  ext=${1:-txt}
  nvim "$temp_path/$random.$ext"
fi
