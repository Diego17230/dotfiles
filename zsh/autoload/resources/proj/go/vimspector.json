{
    "configurations": {
        "run": {
            "adapter": "delve",
            "filetypes": [ "go" ],
            "configuration": {
                "request": "launch",
                "args": [
                    "--",
                    "*${CliArgs}"
                ],
                "program": "${workspaceRoot}/cmd/PROJNAME",
                "mode": "debug"
            }
        },
        "test": {
            "extends": "run",
            "configuration": {
                "request": "launch",
                "args": [
                    "--",
                    "-test.run",
                    "${TestName}"
                ],
                "program": "${fileDirname}",
                "mode": "test"
            }
        }
    }
}
